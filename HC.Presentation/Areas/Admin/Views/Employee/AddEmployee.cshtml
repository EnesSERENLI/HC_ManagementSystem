@model CreateEmployeeDTO
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Add Employee
        </header>
        <div class="panel-body">
            <div class="alert-error text-success">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-danger alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Error!
                        </h4>
                        <p>@TempData["message"]</p>
                    </div>
                }
            </div>
            <form method="post" role="form" asp-action="AddEmployee">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input type="text" class="form-control round-input" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input type="text" class="form-control round-input" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input type="text" class="form-control round-input" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input type="text" class="form-control round-input" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>DepartmentName</label>
                    <select class="form-control round-input-sm m-bot15" name="DepartmentId">
                        @foreach (var department in ViewBag.Departments)
                        {
                            <option value="@department.ID">@department.DepartmentName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-info">Submit</button>
            </form>

        </div>
    </section>
</div>

