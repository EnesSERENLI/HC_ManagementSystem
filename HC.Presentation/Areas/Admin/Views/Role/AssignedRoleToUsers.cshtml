@model AssignedRoleToUsersDTO
@{
    ViewData["Title"] = "AssignedRoleToUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading text-center">
                Assigned Role To Users
            </header>
        </section>
    </div>
    <form asp-action="AssignedRoleToUsers" method="post">
        <input type="hidden" asp-for="Role.Name" />
        <div class="col-lg-6">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><h6 class="card-title">Add user to <span class="label label-info">@Model.Role.Name</span></h6></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.HasNoRole.Count() == 0)
                        {
                            <tr>
                                <td>All users have this role..!</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var user in Model.HasNoRole)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <label class="label_check c_on" for="checkbox-01">
                                            <input type="checkbox" class="checkbox form-control" value="@user.Id" name="UsersToBeAdded">
                                        </label>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>
        </div>
        <div class="col-lg-6">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th><h6 class="card-title">Remove user to <span class="label label-info">@Model.Role.Name</span></h6></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.HasRole.Count() == 0)
                        {
                            <tr>
                                <td>There is no user with this role..!</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var user in Model.HasRole)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <label class="label_check c_on" for="checkbox-01">
                                            <input type="checkbox" class="checkbox form-control" value="@user.Id" name="UsersToBeDeleted">
                                        </label>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>
        </div>
        <div class="col-lg-12" style="float:left;">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="index" asp-controller="Role" class="btn btn-default">Back To List</a>
        </div>
    </form>
</div>
