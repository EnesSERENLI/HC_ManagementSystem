@model UpdateSubCategoryDTO
@{
    ViewData["Title"] = "UpdateSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-6">
    <section class="panel">
        <header class="panel-heading">
            Update SubCategory
        </header>
        <div class="panel-body">
            <div class="alert-error text-error">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-error alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Error!
                        </h4>
                        <p>@TempData["message"]</p>
                    </div>
                }
            </div>
            <form method="post" role="form" asp-action="UpdateSubCategory">
                <div class="form-group">
                    <label asp-for="SubCategoryName"></label>
                    <input type="text" class="form-control round-input" asp-for="SubCategoryName" />
                    <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input type="text" class="form-control round-input" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName"></label>
                    <select class="form-control round-input input-medium m-bot15" name="CategoryId">
                        @foreach (var category in ViewBag.Categories)
                        {
                            if (category.CategoryName == Model.CategoryName)
                            {
                                <option value="@category.ID" selected>@category.CategoryName</option>
                            }
                            else
                            {
                                <option value="@category.ID">@category.CategoryName</option>
                            }                            
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="CreatedIP" />
                    <input type="hidden" asp-for="CreatedComputerName" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="UpdatedIP" />
                    <input type="hidden" asp-for="UpdatedComputerName" />
                    <input type="hidden" asp-for="UpdatedDate" />
                    <input type="hidden" asp-for="DeletedIP" />
                    <input type="hidden" asp-for="DeletedComputerName" />
                    <input type="hidden" asp-for="DeletedDate" />
                </div>
                <button type="submit" class="btn btn-info">Submit</button>
            </form>

        </div>
    </section>
</div>

