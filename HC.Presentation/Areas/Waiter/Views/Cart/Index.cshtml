@model List<HC.Presentation.Models.CartItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? grandTotal = 0;
    int i = 0;
}

<section>
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="row invoice-list">
                <div class="text-center corporate-id">
                    <img src="img/vector-lab.jpg" alt="">
                </div>
                <div class="col-lg-4 col-sm-4">
                    <h4>HotCat ADDRESS</h4>
                    <p>
                        Enes Serenli <br>
                        44 Dreamland Tower, Suite 566 <br>
                        ABC, Dreamland 1230<br>
                        Tel: +90 (545) 365-77-47
                    </p>
                </div>
                <div class="col-lg-4 col-sm-4">
                    <h4>SHIPPING ADDRESS</h4>
                    <p>
                        Vector Lab<br>
                        Road 1, House 2, Sector 3<br>
                        ABC, Dreamland 1230<br>
                        P: +38 (123) 456-7890<br>
                    </p>
                </div>
                <div class="col-lg-4 col-sm-4">
                    <h4>INVOICE INFO</h4>
                    <ul class="unstyled">
                        <li>Invoice Number		: <strong>69626</strong></li>
                        <li>Invoice Date		: @DateTime.Now</li>
                    </ul>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ProductName</th>
                        <th class="hidden-phone">UnitPrice</th>
                        <th class="">Quantity</th>
                        <th class="">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        i++;
                        grandTotal += item.SubTotal;
                        <tr>
                            <td>@i</td>
                            <td>@item.ProductName</td>
                            <td><i class="icon-usd"></i>@item.Price</td>
                            <td>
                                <div id="spinner4">
                                    <div class="input-group" style="width:150px;">
                                        <div class="spinner-buttons input-group-btn">
                                            <a class="btn spinner-up btn-warning" asp-area="Waiter" asp-action="Increase" asp-controller="Cart">
                                                <i class="icon-plus"></i>
                                            </a>
                                        </div>
                                        <input type="number" class="spinner-input form-control" value="@item.Quantity" readonly="readonly">
                                        <div class="spinner-buttons input-group-btn">
                                            <a class="btn spinner-down btn-danger" asp-area="Waiter" asp-action="Decrease" asp-controller="Cart">
                                                <i class="icon-minus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td><i class="icon-usd"></i>@item.SubTotal</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-lg-4 invoice-block pull-right">
                    <ul class="unstyled amounts">
                        <li><strong>Grand Total :</strong><i class="icon-usd"></i>@grandTotal</li>
                    </ul>
                </div>
            </div>
            <div class="text-center invoice-btn">
                <a class="btn btn-danger btn-lg"><i class="icon-check"></i> Submit Order </a>
                <a class="btn btn-info btn-lg" onclick="javascript:window.print();"><i class="icon-print"></i> Print </a>
                <a class="btn btn-warning btn-lg"><i class=" icon-chevron-sign-left"></i> Back </a>
            </div>
        </div>
    </div>
</section>

