@model Table
@{
    ViewData["Title"] = "CreateOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Create Order
            </header>
            <div class="alert-error text-success">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-danger alert-block fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="icon-remove"></i>
                        </button>
                        <h4>
                            <i class="icon-ok-sign"></i>
                            Error!
                        </h4>
                        <p>@TempData["message"]</p>
                    </div>
                }
            </div>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i>ProductName</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i>UnitPrice</th>
                        <th><i class="icon-edit"></i> UnitsInStock</th>
                        <th><i class="icon-shopping-cart"></i> AddToCart</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in ViewBag.Products)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.UnitPrice <i class="icon-usd"></i></td>
                            <td>@product.UnitsInStock</td>
                            <td>
                                <a asp-area="Waiter" asp-controller="Home" asp-action="AddToCart" asp-route-id="@product.ID" asp-route-tableId="@Model.Id" asp-route-userName="@User.Identity.Name" class="btn btn-success"><i class="icon-shopping-cart"></i>AddToCart</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>            
        </section>
        <a asp-area="Waiter" asp-action="Index" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-default">Back To Tables</a>
    </div>
</div>
