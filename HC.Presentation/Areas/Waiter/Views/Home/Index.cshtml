@model List<Table>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Choise a Table
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon-bullhorn"></i> Table No</th>
                        <th class="hidden-phone"><i class="icon-question-sign"></i>TableName</th>
                        <th><i class=" icon-edit"></i> Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var table in Model)
                    {
                        <tr>
                            <td>@table.Id</td>
                            <td>@table.TableName</td>
                            <td>
                                @if (table.Status == HC.Domain.Enums.Status.Active)
                                {
                                    <span class="label label-success label-mini">@table.Status</span>
                                }
                                else if (table.Status == HC.Domain.Enums.Status.None)
                                {
                                    <span class="label label-inverse label-mini">@table.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-area="Waiter" asp-controller="Home" asp-action="CreateOrder" asp-route-id="@table.Id" class="btn btn-info">Create Order</a>
                                <a asp-area="Waiter" asp-controller="Cart" asp-action="index" asp-route-id="@table.Id" class="btn btn-warning">Go To Cart</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

