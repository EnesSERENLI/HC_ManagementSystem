@model UpdateUserDTO
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <aside class="profile-nav col-lg-3">
        <section class="panel">
            <div class="user-heading round">
                @if (@Model.ImagePath == null)
                {
                    <a asp-action="Profile" asp-route-userName="@Model.UserName">
                        <img src="~/Content/img/profile-avatar.jpg" alt="">
                    </a>
                }
                else
                {
                    <a asp-action="Profile" asp-route-userName="@Model.UserName">
                        <img src="@Model.ImagePath" alt="">
                    </a>
                }
                <h1>@Model.FullName</h1>
                <p>@Model.Email</p>
            </div>

            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a asp-action="Profile" asp-route-userName="@Model.UserName"> <i class="icon-user"></i> Profile</a></li>
                <li><a asp-action="EditProfile" asp-controller="Account" asp-route-userName="@Model.UserName"> <i class="icon-edit"></i> Edit profile</a></li>
            </ul>

        </section>
    </aside>
    <aside class="profile-info col-lg-9">
        <section class="panel">
            <div class="bio-graph-heading">
                Aliquam ac magna metus. Nam sed arcu non tellus fringilla fringilla ut vel ispum. Aliquam ac magna metus.
            </div>
            <div class="panel-body bio-graph-info">
                <h1> Profile Info</h1>
                <form class="form-horizontal" asp-action="EditProfile" asp-controller="Account" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All">
                        @if (TempData["message"] != null)
                        {
                            <p class="alert-danger">@TempData["message"]</p>
                        }
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="alert-danger"></div>
                    <div class="form-group">
                        <span asp-validation-for="Address" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="Address"></label>
                        <div class="col-lg-10">
                            <textarea class="form-control" cols="30" rows="10" asp-for="Address" placeholder="Address"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="FullName"></label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="UserName"></label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" asp-for="UserName" placeholder="UserName">
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="Email"></label>
                        <div class="col-lg-6">
                            <input type="text" class="form-control" asp-for="Email" placeholder="Email Addres">
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="Password"></label>
                        <div class="col-lg-6">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="ConfirmPassword"></label>
                        <div class="col-lg-6">
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="ConfirmPassord">
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                        <label class="col-lg-2 control-label" asp-for="Image"></label>
                        <div class="col-lg-6">
                            <input type="file" asp-for="Image" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </aside>
</div>

